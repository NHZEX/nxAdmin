{
    "name": "nhzex/nxadmin",
    "description": "the new thinkphp framework",
    "type": "project",
    "keywords": [
        "frame",
        "thinkphp"
    ],
    "homepage": "http://thinkphp.cn/",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "liu21st",
            "email": "liu21st@gmail.com"
        }
    ],
    "require": {
        "php": "~7.2.10",
        "ext-bcmath": "*",
        "ext-curl": "*",
        "ext-exif": "*",
        "ext-fileinfo": "*",
        "ext-gd": "*",
        "ext-gmp": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-posix": "*",
        "ext-redis": "4.3.0",
        "ext-simplexml": "*",
        "ext-zip": "*",
        "ext-zlib": "*",
        "guzzlehttp/guzzle": "^6.3",
        "hashids/hashids": "^3.0",
        "matomo/ini": "^2.0",
        "nhzex/think-blade": "^1.0",
        "robmorgan/phinx": "^0.10.6",
        "rybakit/msgpack": "^0.5.4",
        "symfony/polyfill-php73": "^1.10",
        "topthink/framework": "5.1.*",
        "vlucas/phpdotenv": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "app\\": "application"
        },
        "psr-0": {
            "": "extend"
        },
        "files": [
            "application/constant.php",
            "application/status_code.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php think deploy -u"
        ]
    },
    "extra": {
        "think-path": "thinkphp"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "7.2.10"
        }
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.laravel-china.org"
        }
    }
}
